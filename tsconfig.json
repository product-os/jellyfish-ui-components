{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "build",
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2016",
        "declaration": true,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "typedocOptions": {
        "excludePrivate": true,
        "excludeProtected": true,
        "excludeExternals": true,
        "gitRevision": "master",
        "out": "docs"
    },
    "include": [
      "lib/**/*.ts",
      "@types/**/*.d.ts"
    ]
}
